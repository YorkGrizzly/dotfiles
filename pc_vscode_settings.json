{
    "[javascript]": {
        "editor.formatOnSave": true
    },
    "[cpp]": {
        "editor.formatOnType": true,
        "editor.formatOnSave": true,
        "editor.renderIndentGuides": true,
        "editor.insertSpaces": true,
        "editor.detectIndentation": true,
        "editor.tabSize": 4
    },
    "clang.executable": "C:\\Program Files\\LLVM\\bin\\clang.exe",
    "clang.cxxflags": [
        "-std=c++11",
        "-IC:\\MinGW\\include",
        "-IC:\\MinGW\\lib\\gcc\\mingw32\\6.3.0\\include",
        "-IC:\\MinGW\\lib\\gcc\\mingw32\\6.3.0\\include\\c++",
        "-I${workspaceRoot}\\include",
        "-I${cwd}"
    ],
    "clang.cflags": [
        "-std=c99",
        "-IC:\\MinGW\\include",
        "-IC:\\MinGW\\lib\\gcc\\mingw32\\6.3.0\\include",
        "-I${workspaceRoot}\\include",
        "-I${cwd}"
    ],
    "code-runner.executorMap": {
        "python": "\"C:\\Users\\yorkg\\AppData\\Local\\Programs\\Python\\Python38\\python.exe\"",
        "c": "gcc $fullfileName && ./a.out",
        //"cpp": "g++ $fullFileName && ./a.out"
        "cpp": "cd $dir && g++ -std=c++11 $fileName -o $fileNameWithoutExt && $fileNameWithoutExt"
    },
    "code-runner.runInTerminal": true,
    "C_Cpp.intelliSenseEngineFallback": "Disabled",
    "workbench.sideBar.location": "left",
    "workbench.editor.enablePreview": false,
    "editor.tabCompletion": "on",
    "editor.wordWrap": "on",
    "terminal.integrated.shell.windows": "C:\\WINDOWS\\System32\\cmd.exe",
    "git.autofetch": true,
    "workbench.statusBar.feedback.visible": false,
    "C_Cpp.updateChannel": "Insiders",
    "code-runner.saveFileBeforeRun": true,
    "window.zoomLevel": 0,
    "python.pythonPath": "C:\\Users\\yorkg\\AppData\\Local\\Programs\\Python\\Python38\\python.exe",
    "html.autoClosingTags": false,
    "workbench.colorTheme": "Gruvbox Dark (Medium)",
    "files.associations": {
        "*.cpp": "cpp",
        "*.tpl": "html"
    },
    "python.linting.pylintEnabled": true,
    "python.linting.enabled": true,
    "remote.SSH.remotePlatform": {
        "ED520": "linux",
        "EEWebHost": "linux",
        "140.113.201.111": "linux",
        "RaspberryPi": "linux",
        "192.168.31.72": "linux",
        "Near-Memory": "linux",
        "UPMEM-SDK": "linux",
        "upmemcloud5": "linux",
        "labstation": "linux"
    },
    "[json]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    "[html]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    // vim-related settings
    "editor.lineNumbers": "on",
    "vim.insertModeKeyBindings": [
        {
            "before": [
                "j",
                "j"
            ],
            "after": [
                "<Esc>"
            ]
        }
    ],
    "vim.normalModeKeyBindings": [
        {
            "before": [
                "Z",
                "Z"
            ],
            "commands": [
                ":wq"
            ]
        }
    ],
    "vim.hlsearch": true,

    // tabnine settings
    "tabnine.experimentalAutoImports": true,
    "workbench.editorAssociations": [
        {
            "viewType": "jupyter.notebook.ipynb",
            "filenamePattern": "*.ipynb"
        }
    ],
}
